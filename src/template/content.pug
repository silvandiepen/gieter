main.main(class=`${meta.type ? 'content--'+ meta.type : ''}`)
    section.section
        div.container
            div.content
                if subtitle
                    h6=subtitle
                if showContentImage
                    h1=title
                    figure
                        img(src=meta.image)
                    | !{removeTitle(content)}  
                else 
                    | !{content}  

    if archives.length
        include archive.pug
        
    if tags.length
        include tags.pug
