{
  "name": "open-letter",
  "version": "0.8.11",
  "description": "Create an open letter html from Markdown",
  "main": "dist/index.js",
  "bin": {
    "open-letter": "dist/index.js"
  },
  "type": "commonjs",
  "scripts": {
    "test:run": "rimraf public && node dist/index.js",
    "serve": "npx serve public",
    "build": "tsc",
    "build:full": "rimraf dist && rimraf .cache && npm run build && npm run style && npm run test:run",
    "build:style": "node dist/style/compile/index.js",
    "style":"sass --load-path=node_modules/ src/style/app.scss dist/style/app.css",
    "dev": "tsc -w",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "npm run build:full"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build:full && npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/silvandiepen/open-letter.git"
  },
  "keywords": [
    "open",
    "letter",
    "generate"
  ],
  "author": "Sil van Diepen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/silvandiepen/open-letter/issues"
  },
  "homepage": "https://github.com/silvandiepen/open-letter#readme",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^17.0.4",
    "@types/node-fetch": "^3.0.2",
    "@types/pug": "^2.0.5",
    "@types/sharp": "^0.29.4",
    "@types/svgo": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "concurrently": "^6.5.1",
    "eslint": "^8.5.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@sil/themer": "^0.1.4",
    "@sil/tools": "^0.1.2",
    "cli-block": "^1.3.7",
    "date-fns": "^2.27.0",
    "express": "^4.17.2",
    "fs-extra": "^10.0.0",
    "iconator": "^0.2.1",
    "jest": "^27.4.5",
    "markdown-it": "^12.3.0",
    "markdown-it-alert": "^0.1.3",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-highlightjs": "^3.5.0",
    "markdown-it-prism": "^2.2.1",
    "markdown-it-tasks": "^0.0.5",
    "mv": "^2.1.1",
    "node-fetch": "^2.6.5",
    "pug": "^3.0.2",
    "purgecss": "^4.1.3",
    "purify-css": "^1.2.5",
    "rimraf": "^3.0.2",
    "sass": "^1.45.1",
    "sharp": "^0.29.3",
    "svgo": "^2.8.0"
  }
}
